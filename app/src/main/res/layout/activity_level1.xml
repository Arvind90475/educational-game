<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Level1Activity">


    <Button
        android:id="@+id/l0"
        android:layout_width="144dp"
        android:layout_height="174dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/l0"
        android:onClick="on_click_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/l1"
        android:layout_width="144dp"
        android:layout_height="174dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="62dp"
        android:background="@drawable/l1"
        android:onClick="on_click_image"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/l2"
        android:layout_width="144dp"
        android:layout_height="174dp"
        android:layout_marginStart="62dp"
        android:background="@drawable/l2"
        android:onClick="on_click_image"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l0" />

    <Button
        android:id="@+id/l3"
        android:layout_width="144dp"
        android:layout_height="174dp"
        android:layout_marginEnd="62dp"
        android:background="@drawable/l3"
        android:onClick="on_click_image"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l1" />

    <TextView
        android:id="@+id/level1TimeView"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="151dp"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l3" />




</androidx.constraintlayout.widget.ConstraintLayout>